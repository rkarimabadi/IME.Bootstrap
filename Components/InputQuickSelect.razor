<CascadingValue Value="this">
        @ChildContent
</CascadingValue>


@code {
    [Parameter] public RenderFragment ChildContent { get; set; }

    public InputQuickSelectButton ActiveButton { get; set; }
    List<InputQuickSelectButton> Buttons = new List<InputQuickSelectButton>();
    internal void AddButton(InputQuickSelectButton Button)
    {
        Buttons.Add(Button);
        if (Buttons.Count == 1)
            ActiveButton = Button;
        StateHasChanged();
    }
    internal void ActivateButton(InputQuickSelectButton button)
    {
        ActiveButton = button;
        button.IsActive = true;
        DeactiveButtons();
        StateHasChanged();
    }
    private void DeactiveButtons()
    {
        foreach(InputQuickSelectButton button in Buttons)
        {
            if (button != ActiveButton) button.IsActive = false;
        }
    }
}
